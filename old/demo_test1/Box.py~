import json

class Box:
    '''
    Class to create objects of detected boxes.
    '''

    def __init__(self,(cx,cy),corners,colour):
        self.centroid = (cx,cy)
        self.corners = corners
        self.colour = colour

    def getDetails(self):
        detail = {}
        detail['centroid'] = self.centroid
        detail['colour'] = self.colour
        detail_json = json.dumps(detail)
        return detail_json


    
